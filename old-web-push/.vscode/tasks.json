{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cargo",
            "subcommand": "build",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build",
            "options": {
                "env": {
                    "RUST_BACKTRACE": "1"
                }
            }
        },
        {
            "type": "cargo",
            "subcommand": "run",
            "problemMatcher": [
                "$rustc"
            ],
            "options": {
                "env": {
                    "RUST_BACKTRACE": "1"
                }
            }
        }
    ]
}