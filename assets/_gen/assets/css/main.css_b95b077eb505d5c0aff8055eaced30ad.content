*,*::before,*::after{box-sizing:border-box}body{background-color:#6dbd1c;margin:0;font-family:-apple-system,BlinkMacSystemFont,segoe ui,Roboto,helvetica neue,Arial,noto sans,sans-serif,apple color emoji,segoe ui emoji,segoe ui symbol,noto color emoji}h1,h2,h3{text-align:center}nav{height:3rem;background-color:#6dbd1c;top:0;position:sticky;box-shadow:0 5px 5px rgba(0,0,0,.5)}nav>.nav-header{display:inline}nav>.nav-header>.nav-title{display:inline-block;padding:.5rem}nav>.nav-btn{display:none}nav>.nav-links{display:inline;float:right;font-size:120%}nav>.nav-links>a{display:inline-block;padding:.75rem .5rem;text-decoration:none;color:#000}nav>.nav-links>a.active{background:rgba(0,0,0,.4)}nav>.nav-links>a:hover{background-color:#bd1c6d}nav>#nav-check{display:none}@media(max-width:38em){nav>.nav-btn{display:inline-block;position:absolute;right:0;top:0}nav>.nav-btn>label{display:inline-block;width:3rem;height:3rem;padding:.5rem}nav>.nav-btn>label:hover,.nav #nav-check:checked~.nav-btn>label{background-color:rgba(0,0,0,.3)}nav>.nav-btn>label>span{display:block;width:2rem;height:.9rem;border-top:.2rem solid #fff}nav>.nav-links{position:absolute;display:block;width:100%;background-color:#6dbd1c;box-shadow:0 5px 5px rgba(0,0,0,.5);overflow-y:hidden;top:3rem;left:0;transform-origin:top}nav>.nav-links>a{display:block;width:100%}nav>#nav-check:not(:checked)~.nav-links{transform:scaleY(0)}nav>#nav-check:checked~.nav-links{transform:scaleY(1)}}img{width:100%}.logo{width:2em;height:2em}svg{height:1em}.bell{height:3rem;display:inline-block;padding:.75rem .5rem}main{padding:1rem;max-width:50rem;margin:auto}footer{text-align:center}a{color:#000}.hide{display:none}.loader{position:fixed;left:50%;top:50%;margin-left:-3.5em;margin-top:-3.5em;border:1em solid #0000;border-top:1em solid #bd1c6d;border-radius:50%;width:7em;height:7em;animation:spin 2s linear infinite}@keyframes spin{0%{transform:rotate(0deg)}100%{transform:rotate(360deg)}}.blocker{position:fixed;z-index:9000;top:0;left:0;width:100%;height:100%;cursor:wait;background:rgba(0,0,0,.5);user-select:none}