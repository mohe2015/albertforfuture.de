{
  "name": "albertforfuture.de",
  "version": "1.0.0",
  "description": "Future source code for website https://albertforfuture.de",
  "main": "index.js",
  "dependencies": {
    "bootstrap": "git+https://github.com/twbs/bootstrap.git",
    "popper.js": "^1.16.1"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@rollup/plugin-strip": "^1.3.2",
    "npm-run-all": "^4.1.5",
    "purgecss": "^2.0.6",
    "rollup": "^1.31.1"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",

    "build:rollup": "rollup -c --environment BUILD:dev",
    "build:hugo": "hugo --baseURL http://localhost:8000/",
    "build:css": "purgecss --config purgecss.config.js --output public",
    "build": "npm-run-all build:rollup build:hugo build:css",

    "dev:rollup": "rollup --watch -c --environment BUILD:dev",
    "dev:hugo": "hugo server --baseURL http://localhost/",
    "dev": "npm-run-all --parallel dev:rollup dev:hugo"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mohe2015/albertforfuture.de.git"
  },
